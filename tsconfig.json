{
  "exclude": [
    "./dist/",
    "commitlint.config.mjs",
    "lint-staged.config.mjs",
    "prettier.config.mjs",
    "stylelint.config.mjs",
    "validate-branch-name.config.cjs"
  ],
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "src",
    "strictNullChecks": true,
    "paths": {
      "@content/*": ["content/*"],
      "@components/*": ["components/*"],
      "@common": ["common/index"],
      "@data/*": ["data/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  }
}

---
import IconAna from '../../public/svg/ana-logo.svg';
import Behance from '../../public/svg/behance.svg';
import Github from '../../public/svg/github.svg';
import Instagram from '../../public/svg/ig.svg';
import Linkedin from '../../public/svg/linkedIn.svg';
import Twitch from '../../public/svg/twitch.svg';
---

<!-- TODO: Crear componente svg para iconos -->
<footer class="footer">
  <div class="container">
    <div class="column1">
      <img class="logo-ana" src={IconAna.src} alt="logo ana" />
      <div class="social">
        <p>Redes Sociales</p>
        <ul class="social-icons">
          <li><img class="icon" src={Behance.src} alt="logo ana" /></li>
          <li><img class="icon" src={Github.src} alt="logo ana" /></li>
          <li><img class="icon" src={Twitch.src} alt="logo ana" /></li>
          <li><img class="icon" src={Instagram.src} alt="logo ana" /></li>
          <li><img class="icon" src={Linkedin.src} alt="logo ana" /></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="copyright">
    <p>&copy; 2024 Proudly Powered by Ana Rangel</p>
  </div>
</footer>

<style>
  .footer {
    margin-block-start: 4rem;
    border: 1px;
    background: linear-gradient(to right, hsl(240deg 92% 5%), hsl(240deg 4% 5%));
    width: 100%;
    padding-left: 0;
    padding-right: 0;
    margin-right: 0;
    margin-left: 0;
  }

  .container {
    display: flex;
    justify-content: space-between;
    padding: 0;
    padding-block: 1.5rem;
    padding-inline: 4.5rem;
    margin: 0;
    width: 100%;
  }

  .column1 {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    width: 100%;
    @media (width <= 570px) {
      justify-content: center;
    }
  }

  .social {
    inline-size: 100%;
    width: fit-content;
  }

  .social p {
    color: hsl(0deg 0% 100%);
    width: fit-content;
    @media (width <= 570px) {
      text-align: center;
      justify-content: center;
    }
    @media (width <= 570px) {
      width: 100%;
    }
  }

  .social-icons {
    display: flex;
    gap: 1rem;
    margin-block-start: 1rem;
    width: fit-content;
  }

  .icon {
    block-size: 1.5rem;
    height: 48px;
    width: 48px;
  }

  .contribution,
  .copyright {
    color: hsl(0deg 0% 100%);
    display: flex;
    justify-content: center;
    padding-bottom: 25px;
  }

  .logo {
    inline-size: 2.9375rem;
    block-size: 2.9375rem;
    margin-block-end: 1rem;
  }
</style>

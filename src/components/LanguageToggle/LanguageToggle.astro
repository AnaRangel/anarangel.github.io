---
import { switchLocalePath } from 'i18n:astro';
---

<div class="slider-container">
  <a
    href={switchLocalePath('es')}
    class:list={[
      'action-language action-left',
      { 'action-selected': !Astro.url.pathname.includes('/en') },
    ]}>Esp</a
  >
  <a
    href={switchLocalePath('en')}
    class:list={[
      'action-language action-right',
      { 'action-selected': Astro.url.pathname.includes('/en') },
    ]}>Eng</a
  >
</div>

<style>
  .slider-container {
    align-items: center;
    background: #27272a;
    border-radius: 50px;
    color: #52525b;
    display: flex;
    height: fit-content;
    justify-content: center;
    width: 100%;
  }
  .action-language {
    color: hsla(0, 0%, 100%, 0.6);
    align-items: center;
    background: transparent;
    border: none;
    display: flex;
    font-size: 20px;
    font-weight: 600;
    justify-content: center;
    padding: 0 24px;
    transition:
      400ms ease-in-out color,
      400ms ease-in-out background;
    width: 50%;
  }

  @media (width >= 800px) {
    .action-language {
      font-size: 14px;
      line-height: normal;
      padding-top: 7.5px;
      padding-bottom: 7.5px;
    }
  }

  .action-selected {
    background: linear-gradient(#2e58ff, #9452ff);
    color: hsl(0deg 0% 100%);
  }
  .action-left {
    border-top-left-radius: 50px;
    border-bottom-left-radius: 50px;
  }
  .action-right {
    border-top-right-radius: 50px;
    border-bottom-right-radius: 50px;
  }
</style>

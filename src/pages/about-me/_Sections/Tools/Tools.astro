      <g id="main-logo">
        <a href="/">
          <use x="33" y="15" width="254" height="254" href="#logo-ana"></use>
        </a>
      </g>
    </svg>
  </div>
</div>

<style>
  .container {
    padding-inline: 1rem;
  }
  .tools {
    background: #0d0d0e;
    border: 1px solid #282828;
    border-radius: 1.5rem;
    position: relative;
    padding-block: 20px;
    margin-top: 3rem;

    cursor: url('/svg/cursor.svg'), auto;

    @media (width >= 1536px) {
      margin-inline: 0;
    }
  }

  #tools-desktop {
    display: none;

    @media (width >= 768px) {
      display: initial;
    }
  }

  #tools-mobile {
    width: 315px;
    margin-inline: auto;
    min-height: 1000px;

    @media (width >= 768px) {
      display: none;
    }
  }

  .line-dash {
    animation: dash 30s linear infinite forwards;
  }

  .tools-title {
    max-width: 460px;
    margin-inline: auto;
    font-weight: 500;
    text-align: center;
    padding-inline: 10px;
    color: white;

    @media (width >= 1200px) {
      position: absolute;
      top: 0;
      left: 50%;
      translate: -50% 56px;
    }
  }

  .group {
    @media (any-hover: hover) {
      &:hover text {
        opacity: 1;
      }
      & text {
        opacity: 0;
        transition: opacity 300ms ease;
      }

      & text {
        opacity: 0;
        transition: opacity 300ms ease;
      }
    }
  }

  #background-logo {
    fill: url(#Gradient1);
    scale: 1.1;
    transform-origin: center;
    filter: blur(12px);
  }

  .tools a {
    cursor: url('/svg/pointer.svg'), auto;
  }

  @keyframes dash {
    0% {
      stroke-dashoffset: 8;
    }
    100% {
      stroke-dashoffset: -1000;
    }
  }
</style>

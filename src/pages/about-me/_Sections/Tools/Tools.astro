        <path
          d="M1297.38 192.791H1053.37V308.572H805.62V346.543H714.115"
          stroke="#282828"
          class="line-dash"
          stroke-width="2.48991"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-dasharray="8.71 8.71"></path>

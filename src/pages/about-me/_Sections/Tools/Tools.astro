          class="line-dash"
          stroke-width="2.48991"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-dasharray="8.71 8.71"></path>
        <path
          d="M2 621.678H309.672V461.079H499.299V408.791H578.415"
          stroke="#282828"
          class="line-dash"
          stroke-width="2.48991"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-dasharray="8.71 8.71"></path>
        <path
          d="M1298 617.943H986.761V457.344C928.455 459.626 811.844 457.344 811.844 457.344C811.844 457.344 811.844 422.693 811.844 408.791H720.34"

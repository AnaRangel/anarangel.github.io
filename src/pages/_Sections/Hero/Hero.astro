---
import { Button, IconCatalog } from '@components';
---

<section>
  <div class="container">
    <div class="hero-headline | flow">
      <h1>Â¡Hola! Soy Ana</h1>
      <p class="hero-description">
        Una <span class="highlighted-role"> UX Senior</span> con alma de Junior
      </p>
    </div>
    <div class="hero-actions | flow">
      <p class="role-list">Product Designer | UX Engineer | UX Designer</p>
      <div class="btn-contanier">
        <div class="btn-group">
          <Button>Contactame </Button>
          <Button invert afterIcon={IconCatalog.arrowDownTray}>Contactame</Button>
        </div>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  section {
    padding-block: 4rem;
  }

  svg {
    stroke-width: 1.5;
    block-size: 1.5rem;
    inline-size: 1.5rem;

    transition: stroke-width 300ms var(--ease-spring-3);
  }

  .btn-group {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    justify-content: center;
  }

  .hero-headline.flow {
    --flow-spacer: 0.5rem;
  }

  h1 {
    color: hsl(0deg 0% 100%);
    font-weight: 700;
    font-size: 4rem;
    margin-inline: auto;

    text-align: center;
  }

  .hero-description {
    color: hsl(0deg 0% 100%);
    font-weight: 500;
    font-size: 2.25rem;
    margin-inline: auto;

    text-align: center;
  }

  .highlighted-role {
    color: transparent;

    background-image: linear-gradient(to right, hsl(317deg 90% 74%), hsl(258deg 92% 70%));
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-actions {
    --flow-spacer: var(--size-5);
    margin-inline: auto;
    margin-block-start: var(--size-8);

    text-align: center;
  }

  .role-list {
    color: hsl(250deg 10% 63%);
    font-weight: 500;
    font-size: var(--size-4);

    margin-inline: auto;
  }

  .btn-contanier {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    gap: 1.5rem;
    align-items: center;
    justify-content: center;
  }

  .btn {
    inline-size: 10.75rem;

    border-radius: 2.25rem;

    font-size: 1rem;
    padding-block: 0.75rem;
    padding-inline: 1rem;
  }

  .btn-primary {
    border: none;

    background-image: linear-gradient(to right, hsl(317deg 90% 74%), hsl(258deg 92% 70%));
  }

  .btn-secondary {
    position: relative;

    border: none;

    color: hsl(0deg 0% 100%);

    background: none;

    &::before {
      position: absolute;

      padding: 0.125rem;
      border-radius: 3.125rem;

      background: linear-gradient(to right, hsl(271deg 91% 65%), hsl(330deg 81% 60%));

      content: '';
      inset: 0;
      mask:
        linear-gradient(hsl(0deg 0% 100%) 0 0) content-box,
        linear-gradient(hsl(0deg 0% 100%) 0 0);
      mask-composite: exclude;
    }
  }
</style>

<style>
  .contact {
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 24px;
    padding: 56px 1rem 56px 1rem;
  }
  .contact__content {
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .contact__title {
    font-family: Inter;
    font-size: 40px;
    font-weight: 500;
    line-height: 60px;
  }
  .contact__description {
    font-family: Inter;
    font-size: 32px;
    font-weight: 300;
    line-height: 48px;
  }

  .contact__actions {
    width: fit-content;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 24px;
    margin: 0 auto;
  }
  .contact__button--ct {
    background: linear-gradient(270deg, #f880d6 -0.7%, #966bf9 100.39%);
    width: 172px;
    height: 49px;
    padding: 12px 16px 12px 16px;
    border-radius: 2.25rem;
    color: #000000;

    font-family: Inter;
    font-size: 16px;
    font-weight: 500;
    line-height: 24px;
  }

  .contact__button--cv {
    height: 49px;
    padding: 12px 16px 12px 16px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 10px;

    position: relative;
    border: none;
    color: hsl(0deg 0% 100%);
    background: none;

    &::before {
      position: absolute;

      padding: 0.125rem;

      border-radius: 3.125rem;

      background: linear-gradient(to right, hsl(271deg 91% 65%), hsl(330deg 81% 60%));

      content: '';
      inset: 0;
      mask:
        linear-gradient(hsl(0deg 0% 100%) 0 0) content-box,
        linear-gradient(hsl(0deg 0% 100%) 0 0);
      mask-composite: exclude;
    }
  }
  .contact__button--cv__text {
    font-family: Inter;
    font-size: 16px;
    font-weight: 500;
    line-height: 24px;
  }
  .contact__button--cv__icon {
    width: 24px;
    height: 24px;
  }

  @media (max-width: 375px) {
    width: 311px;
    .contact {
      height: 512px;
      padding: 56px 0px 56px 0px;
      gap: 36px;
    }
    .contact__title {
      font-size: 32px;
      line-height: 48px;
    }
    .contact__description {
      font-size: 20px;
      font-weight: 300;
      line-height: 30px;
    }
    .contact__button--ct,
    .contact__button--cv {
      width: 100% !important;
      justify-content: center !important;
    }
  }
</style>

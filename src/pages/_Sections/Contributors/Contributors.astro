---
import { Aurora } from '@components';
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';
import designersData from './designers.json';

interface Designer {
  name: string;
  avatar_url: string;
  html_url: string;
}

interface Contributor {
  login: string;
  avatar_url: string;
  html_url: string;
}

const respDevs = await fetch(
  'https://api.github.com/repos/AnaRangel/anarangel.github.io/contributors'
);
const dataDevs: Contributor[] = await respDevs.json();
const dataDesigners: Designer[] = designersData;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/img/avatars/*.jpg');
---

<div class="contributions-container">
  <section class="contributions">
    <h3 class="contributions-title">Quienes han contribuido en el desarrollo y diseño</h3>
    <div class="design-container">
      <p class="contributions-subtitle">Diseño</p>
      <div class="contributors">
        {
          dataDesigners.map((designer) => (
            <a href={designer.html_url} target="_blank" class="contributor" title={designer.name}>
              <Picture
                class="contributors__img"
                src={images[designer.avatar_url]()}
                formats={['avif', 'webp']}
                alt={`Avatar ${designer.name}`}
                width={45}
                height={45}
              />
            </a>
          ))
        }
      </div>
    </div>
    <div class="dev-container">
      <p class="contributions-subtitle">Desarrollo</p>
      <div class="contributors">
        {
          dataDevs.map((contributor) => (
            <a
              href={contributor.html_url}
              target="_blank"
              class="contributor"
              title={contributor.login}
            >
              <img
                src={contributor.avatar_url}
                alt={`Avatar ${contributor.login}`}
                class="contributors__img"
              />
            </a>
          ))
        }
      </div>
    </div>
  </section>
  <Aurora />
</div>

<style lang="scss">
  .contributions-container {
    position: relative;
  }

  .contributions {
    max-width: 1280px;
    margin: 0 auto;
    text-align: center;
    padding-bottom: 5.5rem;

    & > * + * {
      margin-top: 2.7rem;
    }

    .contributions-title {
      font-size: 2.5rem;
      font-weight: 500;
      color: white;
    }

    .design-container > * + *,
    .dev-container > * + * {
      margin-top: 1rem;
    }

    .contributions-subtitle {
      font-size: 24px;
      font-weight: 500;
      color: white;
    }

    .contributors {
      a {
        display: inline-block;
        position: relative;
        margin-left: -10px;
        width: max-content;
      }

      .contributors__img {
        cursor: pointer;
        width: 45px;
        height: 45px;
        object-fit: cover;
        border-radius: 50%;
        border: solid 0.62px #4d4a4a;
        transition: all 0.3s;

        &:hover {
          transform: scale(1.1);
        }
      }

      a::after {
        content: attr(title);
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        white-space: nowrap;
        background-color: rgba(0, 0, 0, 0.8);
        color: #fff;
        padding: 5px;
        border-radius: 5px;
        font-size: 12px;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s;
        pointer-events: none;
      }

      a:hover::after {
        opacity: 1;
        visibility: visible;
      }
    }
  }

  @media (max-width: 767.98px) {
    .contributions {
      width: 90%;
      margin: auto;

      .contributors {
        width: 85%;
        margin-inline: auto;
      }
    }
  }
</style>

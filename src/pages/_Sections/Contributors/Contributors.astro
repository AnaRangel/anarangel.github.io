---
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';
import { t } from 'i18n:astro';
import designersData from './designers.json';

interface Designer {
  name: string;
  avatar_url: string;
  html_url: string;
}

interface Contributor {
  login: string;
  avatar_url: string;
  html_url: string;
}

const respDevs = await fetch(
  'https://api.github.com/repos/AnaRangel/anarangel.github.io/contributors'
);
const dataDevs: Contributor[] = await respDevs.json();
const dataDesigners: Designer[] = designersData;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/img/avatars/*.jpg');
---

<section class="contributions">
  <p class="contributions-title">{t('contributions_title')}</p>

  <article class="contributions-container">
    <div class="contributions-container-roles">
      <span class="contributions-subtitle">{t('contributions_design')}</span>
      <div class="contributors">
        {
          dataDesigners.map((designer) => (
            <a href={designer.html_url} target="_blank" class="contributor" title={designer.name}>
              <Picture
                class="contributors__img"
                src={designer.avatar_url}
                formats={['avif', 'webp']}
                alt={`Avatar ${designer.name}`}
                width={45}
                height={45}
              />
            </a>
          ))
        }
      </div>
    </div>

    <div class="contributions-container-roles">
      <span class="contributions-subtitle">{t('contributions_dev')}</span>
      <div class="contributors">
        {
          dataDevs.map((contributor) => (
            <a
              href={contributor.html_url}
              target="_blank"
              class="contributor"
              title={contributor.login}
            >
              <img
                src={contributor.avatar_url}
                alt={`Avatar ${contributor.login}`}
                class="contributors__img"
              />
            </a>
          ))
        }
      </div>
    </div>
  </article>
</section>

<style lang="scss">
  .contributions {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;

    .contributions-title {
      font-size: 40px;
      font-weight: 500;
      line-height: 60px;
      text-align: center;
      margin-bottom: 32px;
      color: white;
    }

    .contributions-container {
      display: flex;
      gap: 120px;
    }

    .contributions-container-roles {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .contributions-subtitle {
      font-size: 24px;
      font-weight: 500;
      line-height: 14px;
      margin-bottom: 36px;
      color: white;
    }

    .contributors {
      display: flex;
      max-width: 1044px;
      width: 100%;
      margin-bottom: 24px;

      a {
        position: relative;
        margin-left: -10px;
      }

      .contributors__img {
        cursor: pointer;
        width: 45px;
        height: 45px;
        object-fit: cover;
        border-radius: 50%;
        border: solid 0.62px #4d4a4a;
        transition: all 0.3s;

        &:hover {
          transform: scale(1.1);
        }
      }

      a::after {
        content: attr(title);
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        white-space: nowrap;
        background-color: rgba(0, 0, 0, 0.8);
        color: #fff;
        padding: 5px;
        border-radius: 5px;
        font-size: 12px;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s;
        pointer-events: none;
      }

      a:hover::after {
        opacity: 1;
        visibility: visible;
      }
    }
  }

  @media only screen and (max-width: 768px) {
    .contributions {
      width: 90%;
      margin: 0 auto;

      .contributions-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
      }

      .contributors-img {
        margin-bottom: 32px;
      }
    }
  }
</style>

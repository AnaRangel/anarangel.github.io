---
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';
import { t } from 'i18n:astro';
import designersData from './designers.json';

interface Designer {
  name: string;
  avatar_url: string;
  html_url: string;
}

interface Contributor {
  login: string;
  avatar_url: string;
  html_url: string;
}

const respDevs = await fetch(
  'https://api.github.com/repos/AnaRangel/anarangel.github.io/contributors'
);
const dataDevs: Contributor[] = await respDevs.json();
const dataDesigners: Designer[] = designersData;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/img/avatars/*.jpg');
---

<div class="container-contributions">
  <section class="contributions">
    <h2 class="contributions-title">{t('contributions_title')}</h2>

    <article class="contributions-container">
      <div class="contributions-container-roles">
        <h3 class="contributions-subtitle">{t('contributions_design')}</h3>
        <div class="contributors">
          {
            dataDesigners.map((designer) => (
              <a href={designer.html_url} target="_blank" class="contributor" title={designer.name}>
                <Picture
                  class="contributors__img"
                  src={images[designer.avatar_url]()}
                  formats={['avif', 'webp']}
                  alt={`Avatar ${designer.name}`}
                  width={45}
                  height={45}
                />
              </a>
            ))
          }
        </div>
      </div>

      <div class="contributions-container-roles">
        <h3 class="contributions-subtitle">{t('contributions_dev')}</h3>
        <div class="contributors">
          {
            dataDevs.map((contributor) => (
              <a
                href={contributor.html_url}
                target="_blank"
                class="contributor"
                title={contributor.login}
              >
                <img
                  src={contributor.avatar_url}
                  alt={`Avatar ${contributor.login}`}
                  class="contributors__img"
                />
              </a>
            ))
          }
        </div>
      </div>
    </article>
  </section>
  <!-- <Aurora /> -->
</div>

<style lang="scss">
  .container-contributions {
    position: relative;
  }

  .contributions {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding-bottom: 5.5rem;
    max-width: 1280px;
    margin: 0 auto;
    padding-inline: 1rem;
    gap: 3rem;

    .contributions-title {
      font-size: 40px;
      font-weight: 500;
      text-align: center;
      color: white;
    }

    .contributions-container {
      display: flex;
      flex-direction: column;
      gap: 80px;

      @media (width >= 768px) {
        flex-direction: row;
        gap: 120px;
      }
    }

    .contributions-container-roles {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .contributions-subtitle {
      font-size: 24px;
      font-weight: 500;
      color: white;
    }

    .contributors {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      max-width: 1044px;
      width: 100%;

      a {
        position: relative;
        margin-left: -10px;
      }

      .contributors__img {
        cursor: pointer;
        width: 45px;
        height: 45px;
        object-fit: cover;
        border-radius: 50%;
        border: solid 0.62px #4d4a4a;
        transition: all 0.3s;

        &:hover {
          transform: scale(1.1);
        }
      }

      a::after {
        content: attr(title);
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        white-space: nowrap;
        background-color: rgba(0, 0, 0, 0.8);
        color: #fff;
        padding: 5px;
        border-radius: 5px;
        font-size: 12px;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s;
        pointer-events: none;
      }

      a:hover::after {
        opacity: 1;
        visibility: visible;
      }
    }
  }
</style>

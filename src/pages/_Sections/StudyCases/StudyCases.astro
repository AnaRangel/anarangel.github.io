---
import { SimpleCard } from '@components';
import { t } from 'i18n:astro';
---

<div class="study-cases">
  <section class="card-container latam-airlines">
    <img
      class="logo-img"
      src="/svg/latam-airlines-logo.svg"
      alt="Latam airlines Logo"
      width="285"
    />
    <h3>{t('study_case_title')}</h3>
    <p>
      {t('study_case_desc')}
    </p>
    <img class="logo-img" src="/svg/latam-airlines-1.svg" alt="Latam airlines Logo" />
  </section>
  <!-- TODO: arreglar que la imagen dentro del componente quede en la posicion correcta -->
  <SimpleCard
    cardText={t('project_cta')}
    cardImage="/svg/latam-airlines.svg"
    isInverted={true}
    url="/latam-airlines"
    hasHover
  />
</div>

<style>
  .study-cases {
    display: grid;
    gap: 2rem;
    width: 90%;
    margin: 0 auto;
    margin-top: 2rem;

    @media (width >= 992px) {
      grid-template-columns: 1fr 1fr;
      width: 100%;
    }
  }

  .study-cases .latam-airlines {
    background: linear-gradient(150deg, #0b153f, #0d0e12);
    border: 1px solid hsl(0deg 0% 16%);
    border-radius: 1.5rem;
  }

  .study-cases .card-container:not(.latam-airlines) {
    block-size: initial;

    & img {
      margin-top: 6rem;
      translate: -3rem 0;
    }
  }

  .card-container {
    display: flex;
    flex-direction: column;
    gap: 30px;
    padding: 3rem;
  }

  h3 {
    font-weight: 600;
    font-size: 2.25rem;
  }

  p {
    font-size: 1.25rem;
    line-height: 1.875rem;
    color: #b1b3d0;
    font-family: Inter, sans-serif;
  }
</style>
